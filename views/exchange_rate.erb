<br>
<div class="form">
  <form action="/" method="post">

    <div class="date_amount">
      Date:
      <select class="select_date" name="index_number">
        <% @data.each do |element| %>
        <% date = element["time"]%>
        <% find_index = @data.find { |element| element["time"] == date } %>
        <% index_num = @data.index(find_index)%>
        <option value="<%= index_num %>"> <%= date %> </option>
        <% end%>
      </select>
      <br>


      Amount:
      <input type="number" name="amount"  value="100" placeholder="input number" step="0.01">
      <br>
    </div>

    <div class="ccy_selection">
      From:
      <select class="from" name="from">
        <option value="GBP">GBP</option>
        <% cube = @data[0]["Cube"] %>
        <% cube.each do |element| %>
        <option value="<%= element['currency'] %>" ><%= element['currency'] %></option>
        <% end %>
      </select>
      <br>

      To:
      <select class="to" name="to">
        <% cube = @data[0]["Cube"] %>
        <% cube.each do |element| %>
        <option value="<%= element['currency'] %>"><%= element['currency'] %></option>
        <% end %>
      </select>
    </div>

    <br>
    <input class="button" type="submit" value="Convert">
  </form>
</div>

